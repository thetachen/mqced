\begin_layout Subsection
Ideal Dipole Radiation
\end_layout

\begin_layout Standard
The EM fields of a ideal dipole 
\begin_inset Formula $\mathbf{P}\left(t\right)=\mathbf{p}_{0}\cos\omega_{0}t$
\end_inset

 can be written as 
\begin_inset Foot
status open

\begin_layout Plain Layout
http://www.hep.princeton.edu/~mcdonald/examples/nearzone.pdf
\end_layout

\begin_layout Plain Layout
http://physics.princeton.edu/~mcdonald/examples/laserfocus.pdf
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\mathbf{E}\left(\mathbf{r},t\right) & = & \frac{p_{0}}{4\pi\epsilon_{0}}\left(\hat{\mathbf{r}}\times\hat{\mathbf{p}}\right)\times\hat{\mathbf{r}}\frac{\omega_{0}^{2}}{c^{2}}\frac{1}{r}\cos\omega_{0}\left(t-\frac{r}{c}\right)\\
 &  & +\frac{p_{0}}{4\pi\epsilon_{0}}\left[3\left(\hat{\mathbf{r}}\cdot\hat{\mathbf{p}}\right)\hat{\mathbf{r}}-\hat{\mathbf{p}}\right]\left[\frac{1}{r^{3}}\cos\omega_{0}\left(t-\frac{r}{c}\right)+\frac{\omega_{0}}{c}\frac{1}{r^{2}}\cos\omega_{0}\left(t-\frac{r}{c}\right)\right]
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\[
\mathbf{B}\left(\mathbf{r},t\right)=\left(\hat{\mathbf{r}}\times\hat{\mathbf{p}}\right)\frac{\mu_{0}cp_{0}}{4\pi}\frac{\omega_{0}^{2}}{c^{2}}\left[\frac{1}{r}\cos\omega_{0}\left(t-\frac{r}{c}\right)-\frac{c}{\omega_{0}}\frac{1}{r^{2}}\sin\omega_{0}\left(t-\frac{r}{c}\right)\right]
\]

\end_inset

Let 
\begin_inset Formula $\hat{\mathbf{p}}=\hat{\mathbf{z}}$
\end_inset

, then we can express the following vectors in spherical coordinate unit
 vector: 
\begin_inset Formula 
\[
\hat{\mathbf{r}}\times\hat{\mathbf{p}}=-\sin\theta\hat{\boldsymbol{\phi}}
\]

\end_inset


\begin_inset Formula 
\[
\left(\hat{\mathbf{r}}\times\hat{\mathbf{p}}\right)\times\hat{\mathbf{r}}=-\sin\theta\hat{\boldsymbol{\theta}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\hat{\mathbf{r}}\cdot\hat{\mathbf{p}}\right)\hat{\mathbf{r}}=\cos\theta\hat{\mathbf{r}}
\]

\end_inset


\begin_inset Formula 
\[
3\left(\hat{\mathbf{r}}\cdot\hat{\mathbf{p}}\right)\hat{\mathbf{r}}-\hat{\mathbf{p}}=3\cos\theta\hat{\mathbf{r}}-\hat{\mathbf{z}}=2\cos\theta\hat{\mathbf{r}}+\sin\theta\hat{\boldsymbol{\theta}}
\]

\end_inset

Then we can write the field as 
\begin_inset Formula 
\begin{eqnarray*}
\mathbf{E}\left(\mathbf{r},t\right) & = & -\hat{\boldsymbol{\theta}}\frac{p_{0}}{4\pi\epsilon_{0}}\sin\theta\frac{\omega_{0}^{2}}{c^{2}}\frac{1}{r}\cos\omega_{0}\left(t-\frac{r}{c}\right)\\
 &  & +\frac{p_{0}}{4\pi\epsilon_{0}}\left[2\cos\theta\hat{\mathbf{r}}+\sin\theta\hat{\boldsymbol{\theta}}\right]\left[\frac{1}{r^{3}}\cos\omega_{0}\left(t-\frac{r}{c}\right)+\frac{\omega_{0}}{c}\frac{1}{r^{2}}\cos\omega_{0}\left(t-\frac{r}{c}\right)\right]
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\[
\mathbf{B}\left(\mathbf{r},t\right)=-\hat{\boldsymbol{\phi}}\frac{\mu_{0}p_{0}}{4\pi}\sin\theta\frac{\omega_{0}^{2}}{c}\left[\frac{1}{r}\cos\omega_{0}\left(t-\frac{r}{c}\right)-\frac{c}{\omega_{0}}\frac{1}{r^{2}}\sin\omega_{0}\left(t-\frac{r}{c}\right)\right]
\]

\end_inset

Let 
\begin_inset Formula $\lambda=c/\omega_{0}$
\end_inset

, we can write the EM field in terms of 
\begin_inset Formula $r^{\prime}=r/\lambda$
\end_inset

, 
\begin_inset Formula $\omega_{0}\left(t-\frac{r}{c}\right)=\omega_{0}t-r^{\prime}$
\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\mathbf{E}\left(\mathbf{r},t\right) & = & -\hat{\boldsymbol{\theta}}\frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\sin\theta\frac{1}{r^{\prime}}\cos\left(\omega_{0}t-r^{\prime}\right)\\
 &  & +\frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\left[2\cos\theta\hat{\mathbf{r}}+\sin\theta\hat{\boldsymbol{\theta}}\right]\left[\frac{1}{r^{\prime3}}\cos\left(\omega_{0}t-r^{\prime}\right)+\frac{1}{r^{\prime2}}\cos\left(\omega_{0}t-r^{\prime}\right)\right]
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\[
\mathbf{B}\left(\mathbf{r},t\right)=-\hat{\boldsymbol{\phi}}\frac{\omega_{0}^{3}}{c^{2}}\frac{\mu_{0}p_{0}}{4\pi}\sin\theta\left[\frac{1}{r^{\prime}}\cos\left(\omega_{0}t-r^{\prime}\right)-\frac{1}{r^{\prime2}}\sin\left(\omega_{0}t-r^{\prime}\right)\right]
\]

\end_inset


\end_layout

