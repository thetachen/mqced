\begin_layout Subsubsection
Helmholtz decomposition
\end_layout

\begin_layout Standard
We want to decompose vector field, say 
\begin_inset Formula $\mathbf{E}$
\end_inset

 and 
\begin_inset Formula $\mathbf{B}$
\end_inset

, into transverse (
\begin_inset Formula $\perp$
\end_inset

) and longitutinal (
\begin_inset Formula $\parallel$
\end_inset

)
\begin_inset Formula 
\[
\boldsymbol{\nabla}\cdot\mathbf{E}_{\perp}=\boldsymbol{\nabla}\cdot\mathbf{B}_{\perp}=0
\]

\end_inset


\begin_inset Formula 
\[
\boldsymbol{\nabla}\times\mathbf{E}_{\parallel}=\boldsymbol{\nabla}\times\mathbf{B}_{\parallel}=0
\]

\end_inset

According to McDonald's note
\begin_inset Foot
status open

\begin_layout Plain Layout
http://puhep1.princeton.edu/~kirkmcd/examples/helmholtz.pdf
\end_layout

\end_inset

, 
\begin_inset Formula $\perp$
\end_inset

 is denoted by rotational (rot) and 
\begin_inset Formula $\parallel$
\end_inset

 is by irrotational (irr).
 Also, he gives the irrotational part of the electric field:
\begin_inset Formula 
\[
\mathbf{E}_{\parallel}=\frac{p_{0}}{4\pi\epsilon_{0}}\left[3\left(\hat{\mathbf{r}}\cdot\hat{\mathbf{p}}\right)\hat{\mathbf{r}}-\hat{\mathbf{p}}\right]\frac{1}{r^{3}}\cos\omega_{0}t
\]

\end_inset

that is:
\begin_inset Formula 
\begin{eqnarray*}
\mathbf{E}_{\parallel} & = & \frac{p_{0}}{4\pi\epsilon_{0}}\left[2\cos\theta\hat{\mathbf{r}}+\sin\theta\hat{\boldsymbol{\theta}}\right]\frac{1}{r^{3}}\cos\omega_{0}t\\
 & = & \frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\left[2\cos\theta\hat{\mathbf{r}}+\sin\theta\hat{\boldsymbol{\theta}}\right]\frac{1}{r^{\prime3}}\cos\omega_{0}t
\end{eqnarray*}

\end_inset

Therefore, we know:
\begin_inset Formula 
\begin{eqnarray*}
\mathbf{E}_{\perp}=\mathbf{E}-\mathbf{E}_{\parallel} & = & -\hat{\boldsymbol{\theta}}\frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\sin\theta\frac{1}{r^{\prime}}\cos\left(\omega_{0}t-r^{\prime}\right)\\
 &  & +\frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\left[2\cos\theta\hat{\mathbf{r}}+\sin\theta\hat{\boldsymbol{\theta}}\right]\frac{1}{r^{\prime2}}\cos\left(\omega_{0}t-r^{\prime}\right)\\
 & = & \left\{ \frac{2}{r^{\prime2}}\cos\theta\hat{\mathbf{r}}+\left(\frac{1}{r^{\prime2}}-\frac{1}{r^{\prime}}\right)\sin\theta\hat{\boldsymbol{\theta}}\right\} \frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)
\end{eqnarray*}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
\begin_inset Formula 
\[
\hat{\mathbf{r}}=\sin\theta\cos\phi\hat{\mathbf{x}}+\sin\theta\sin\phi\hat{\mathbf{y}}+\cos\theta\hat{\mathbf{z}}
\]

\end_inset


\begin_inset Formula 
\[
\hat{\boldsymbol{\theta}}=\cos\theta\cos\phi\hat{\mathbf{x}}+\cos\theta\sin\phi\hat{\mathbf{y}}-\sin\theta\hat{\mathbf{z}}
\]

\end_inset


\begin_inset Formula 
\[
\hat{\boldsymbol{\phi}}=-\sin\phi\hat{\mathbf{x}}+\cos\phi\hat{\mathbf{y}}
\]

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\mathbf{E}_{\perp} & = & \left\{ \frac{2}{r^{\prime2}}\cos\theta\hat{\mathbf{r}}+\left(\frac{1}{r^{\prime2}}-\frac{1}{r^{\prime}}\right)\sin\theta\hat{\boldsymbol{\theta}}\right\} \frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)\\
 & = & \hat{\mathbf{x}}\left\{ \frac{2}{r^{\prime2}}\cos\theta\sin\theta\cos\phi+\left(\frac{1}{r^{\prime2}}-\frac{1}{r^{\prime}}\right)\sin\theta\cos\theta\cos\phi\right\} \frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)+\\
 &  & \hat{\mathbf{y}}\left\{ \frac{2}{r^{\prime2}}\cos\theta\sin\theta\sin\phi+\left(\frac{1}{r^{\prime2}}-\frac{1}{r^{\prime}}\right)\sin\theta\cos\theta\sin\phi\right\} \frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)+\\
 &  & \hat{\mathbf{z}}\left\{ \frac{2}{r^{\prime2}}\cos\theta\cos\theta-\left(\frac{1}{r^{\prime2}}-\frac{1}{r^{\prime}}\right)\sin\theta\sin\theta\right\} \frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)\\
 & = & \hat{\mathbf{x}}\left\{ \frac{3}{r^{\prime2}}-\frac{1}{r^{\prime}}\right\} \frac{xz}{r^{2}}\frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)+\\
 &  & \hat{\mathbf{y}}\left\{ \frac{3}{r^{\prime2}}-\frac{1}{r^{\prime}}\right\} \frac{yz}{r^{2}}\frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)+\\
 &  & \hat{\mathbf{z}}\left\{ \frac{2}{r^{\prime2}}\frac{z^{2}}{r^{2}}-\left(\frac{1}{r^{\prime2}}-\frac{1}{r^{\prime}}\right)\frac{x^{2}+y^{2}}{r^{2}}\right\} \frac{\omega_{0}^{3}}{c^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)
\end{eqnarray*}

\end_inset

Use 
\begin_inset Formula $r^{\prime}=r/\lambda$
\end_inset

 and 
\begin_inset Formula $\lambda=c/\omega_{0}$
\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\mathbf{E}_{\perp} & = & \hat{\mathbf{x}}\left\{ 3\frac{\lambda^{2}}{r^{2}}-\frac{\lambda}{r}\right\} \frac{xz}{r^{2}}\frac{1}{\lambda^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)+\\
 &  & \hat{\mathbf{y}}\left\{ 3\frac{\lambda^{2}}{r^{2}}-\frac{\lambda}{r}\right\} \frac{yz}{r^{2}}\frac{1}{\lambda^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)+\\
 &  & \hat{\mathbf{z}}\left\{ 2\frac{\lambda^{2}}{r^{2}}\frac{z^{2}}{r^{2}}-\left(\frac{\lambda^{2}}{r^{2}}-\frac{\lambda}{r}\right)\frac{x^{2}+y^{2}}{r^{2}}\right\} \frac{1}{\lambda^{3}}\frac{p_{0}}{4\pi\epsilon_{0}}\cos\left(\omega_{0}t-r^{\prime}\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Itemize
Near field: 
\begin_inset Formula $r\ll\lambda$
\end_inset

, 
\begin_inset Formula $r^{\prime}\ll1$
\end_inset


\begin_inset Formula 
