\begin_inset Formula 
\begin{equation}
k_{Eh}\left(t\right)=2\kappa^{\text{3D}}\rho_{00}\left(t\right)\sin^{2}\omega_{0}t.\label{eq:Ehrenfest_rate-3D}
\end{equation}

\end_inset


\end_layout

