\begin_inset Formula 
\begin{equation}
\begin{split}\widehat{H}_{R}= & \int\mathrm{d}\mathbf{r}\left\{ \frac{\epsilon_{0}}{2}\widehat{\mathbf{E}}_{\perp}\left(\mathbf{r}\right)^{2}+\frac{1}{2\mu_{0}}\widehat{\mathbf{B}}\left(\mathbf{r}\right)^{2}\right\} \\
= & \sum_{\mathbf{k}}\hbar\omega_{\mathbf{k}}\left(\widehat{a}_{\mathbf{k}}^{\dagger}\widehat{a}_{\mathbf{k}}+\frac{1}{2}\right).
\end{split}
\end{equation}

\end_inset


