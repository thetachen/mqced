\begin_inset Formula 
\begin{equation}
\mathbf{E}_{\omega}\left(\mathbf{r}\right)=\frac{1}{4\pi\epsilon_{0}}\int\mathrm{d}v^{\prime}e^{iks}\left\{ -\frac{\boldsymbol{\nabla}^{\prime}\mathbf{P}_{\omega}^{\prime}}{s^{2}}\hat{\mathbf{s}}-\frac{\boldsymbol{\nabla}^{\prime}\mathbf{J}_{\omega}^{\prime}}{cs}\hat{\mathbf{s}}+ik\frac{\mathbf{J}_{\omega}^{\prime}}{cs}\right\} .
\end{equation}

\end_inset

