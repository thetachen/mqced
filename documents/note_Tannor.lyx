\begin_layout Standard
We now turn to the time-domain formulation of one-photon and two-photon
 spectroscopies.
 Consider a CW field given by 
\begin_inset Formula $\vec{E}=\vec{E}_{0}\cos\left(\omega_{0}t\right)$
\end_inset

, and use rotating wave approximation (RWA):
\begin_inset Formula 
\[
H_{I}\left(t\right)=\begin{cases}
-\frac{1}{2}\widehat{\vec{\mu}}\cdot\vec{E}_{I}e^{-i\omega_{I}t} & \text{absorption}\\
-\frac{1}{2}\vec{\mu}\cdot\vec{E}_{S}e^{i\omega_{S}t} & \text{emission }
\end{cases}
\]

\end_inset

By second order time-dependent perturbation theory, the wavefunction after
 two interaction can be written as 
\begin_inset Formula 
\[
\left|\psi^{\left(2\right)}\left(t\right)\right\rangle =-\frac{1}{4\hbar^{2}}\int_{-\infty}^{t}dt_{2}\int_{-\infty}^{t_{2}}dt_{1}e^{-\frac{i}{\hbar}H_{a}\left(t-t_{2}\right)}\left\{ \vec{\mu}\cdot\vec{E}_{S}e^{i\omega_{S}t_{2}}\right\} e^{-\frac{i}{\hbar}H_{b}\left(t_{2}-t_{1}\right)}\left\{ \vec{\mu}\cdot\vec{E}_{I}e^{-i\omega_{I}t_{1}}\right\} e^{-\frac{i}{\hbar}H_{i}t_{1}}\left|\psi\left(-\infty\right)\right\rangle .
\]

\end_inset


\end_layout

\begin_layout Enumerate
Assume that 
\begin_inset Formula $\left|\psi\left(-\infty\right)\right\rangle $
\end_inset

 is an eigenstate of 
\begin_inset Formula $H_{i}$
\end_inset

, so that 
\begin_inset Formula 
\[
e^{-\frac{i}{\hbar}H_{i}t_{1}}\left|\psi\left(-\infty\right)\right\rangle =e^{-i\omega_{i}t_{1}}\left|\psi\left(-\infty\right)\right\rangle \equiv e^{-i\omega_{i}t_{1}}\left|\psi_{i}\right\rangle .
\]

\end_inset

Then 
\begin_inset Formula 
\[
\left|\psi^{\left(2\right)}\left(t\right)\right\rangle =-\frac{1}{4\hbar^{2}}\int_{-\infty}^{t}dt_{2}\int_{-\infty}^{t_{2}}dt_{1}e^{-\frac{i}{\hbar}H_{a}\left(t-t_{2}\right)}\left\{ \vec{\mu}\cdot\vec{E}_{S}e^{i\omega_{S}t_{2}}\right\} e^{-\frac{i}{\hbar}H_{b}\left(t_{2}-t_{1}\right)}\left\{ \vec{\mu}\cdot\vec{E}_{I}e^{-i\left(\omega_{I}+\omega_{i}\right)t_{1}}\right\} \left|\psi_{i}\right\rangle .
\]

\end_inset


\end_layout

\begin_layout Enumerate
Use first order wavefunction: 
\begin_inset Formula $\omega_{I}+\omega_{i}=\widetilde{\omega}_{I}$
\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\left|\psi^{\left(1\right)}\left(t_{2}\right)\right\rangle  & = & \frac{i}{2\hbar}\int_{-\infty}^{t_{2}}dt_{1}e^{-\frac{i}{\hbar}H_{b}\left(t_{2}-t_{1}\right)}\left\{ \vec{\mu}\cdot\vec{E}_{I}e^{-i\widetilde{\omega}_{I}t_{1}}\right\} \left|\psi_{i}\right\rangle .\\
 & = & \frac{i}{2\hbar}e^{-i\widetilde{\omega}_{I}t_{2}}\int_{-\infty}^{t_{2}}dt_{1}e^{-\frac{i}{\hbar}H_{b}\left(t_{2}-t_{1}\right)}\vec{\mu}\cdot\vec{E}_{I}e^{i\widetilde{\omega}_{I}\left(t_{2}-t_{1}\right)}\left|\psi_{i}\right\rangle \\
 & = & \frac{i}{2\hbar}e^{-i\widetilde{\omega}_{I}t_{2}}\int_{0}^{\infty}d\tau e^{-\frac{i}{\hbar}H_{b}\tau}\vec{\mu}\cdot\vec{E}_{I}e^{i\widetilde{\omega}_{I}\tau}\left|\psi_{i}\right\rangle \\
 & = & \frac{iE_{I}}{2\hbar}e^{-i\widetilde{\omega}_{I}t_{2}}\left|R_{\widetilde{\omega}_{I}}\right\rangle 
\end{eqnarray*}

\end_inset

where we define the Raman wavefunction (Heller, 1982) that does not depend
 on time:
\begin_inset Formula 
\[
\left|R_{\widetilde{\omega}_{I}}\right\rangle =\int_{0}^{\infty}d\tau e^{-\frac{i}{\hbar}H_{b}\tau}\vec{\mu}\hat{E}_{I}e^{i\widetilde{\omega}_{I}\tau}\left|\psi_{i}\right\rangle 
\]

\end_inset

Then
\begin_inset Formula 
\begin{eqnarray*}
\left|\psi^{\left(2\right)}\left(t\right)\right\rangle  & = & \frac{i}{2\hbar}\int_{-\infty}^{t}dt_{2}e^{-\frac{i}{\hbar}H_{a}\left(t-t_{2}\right)}\left\{ \vec{\mu}\cdot\vec{E}_{S}e^{i\omega_{S}t_{2}}\right\} \left|\psi^{\left(1\right)}\left(t_{2}\right)\right\rangle \\
 & = & -\frac{1}{4\hbar^{2}}\int_{-\infty}^{t}dt_{2}e^{-\frac{i}{\hbar}H_{a}\left(t-t_{2}\right)}\left\{ \vec{\mu}\cdot\vec{E}_{S}e^{i\omega_{S}t_{2}}\right\} E_{I}e^{-i\widetilde{\omega}_{I}t_{2}}\left|R_{\widetilde{\omega}_{I}}\right\rangle \\
 & = & -\frac{E_{S}E_{I}}{4\hbar^{2}}e^{-\frac{i}{\hbar}H_{a}t}\int_{-\infty}^{t}dt_{2}e^{\frac{i}{\hbar}H_{a}t_{2}}\vec{\mu}\cdot\hat{E}_{S}e^{i\left(\omega_{S}-\widetilde{\omega}_{I}\right)t_{2}}\left|R_{\widetilde{\omega}_{I}}\right\rangle 
\end{eqnarray*}

\end_inset


\end_layout

