\begin_layout Plain Layout
For Ehrenfest+R: we plug in 
\begin_inset Formula 
\[
\frac{dP_{2}}{dt}=-\frac{dP_{1}}{dt}=-k_{\mathrm{FGR}}P_{2}
\]

\end_inset

and get 
\begin_inset Formula 
\begin{eqnarray*}
\frac{dP_{1}}{dt}P_{2}+P_{1}\frac{dP_{2}}{dt} & = & k_{\mathrm{FGR}}P_{2}P_{2}-P_{1}k_{\mathrm{FGR}}P_{2}\\
 & = & k_{\mathrm{FGR}}P_{2}\left(P_{2}-P_{1}\right)
\end{eqnarray*}

\end_inset

Then we write the equation of motion for 
\begin_inset Formula $\rho_{12}$
\end_inset

 with an additional term to account for 
\begin_inset Formula 
\[
\frac{d}{dt}\rho_{12}=i\omega_{0}\rho_{12}+\frac{i}{\hbar}H_{12}^{el}\left(P_{2}-P_{1}\right)+\Gamma
\]

\end_inset


\begin_inset Formula 
\[
\frac{d}{dt}\rho_{12}^{*}=-i\omega_{0}\rho_{12}^{*}-\frac{i}{\hbar}H_{12}^{el}\left(P_{2}-P_{1}\right)+\Gamma^{*}
\]

\end_inset


\begin_inset Formula 
\[
\rho_{12}^{*}\frac{d}{dt}\rho_{12}+\rho_{12}\frac{d}{dt}\rho_{12}^{*}=\frac{2}{\hbar}H_{12}^{el}\left(P_{2}-P_{1}\right)\text{Im}\rho_{12}+\Gamma\rho_{12}^{*}+\Gamma^{*}\rho_{12}
\]

\end_inset

or use the approximation 
\begin_inset Formula $H_{12}^{el}=-\frac{\omega_{0}}{c\epsilon_{0}}\left|\mu_{12}\right|^{2}\mathrm{Im}\rho_{12}\left(t\right)$
\end_inset

 
\begin_inset Formula 
\[
\rho_{12}^{*}\frac{d}{dt}\rho_{12}+\rho_{12}\frac{d}{dt}\rho_{12}^{*}=-2k_{\mathrm{FGR}}\left[\mathrm{Im}\rho_{12}\right]^{2}\left(P_{2}-P_{1}\right)+\Gamma\rho_{12}^{*}+\rho_{12}\Gamma^{*}
\]

\end_inset

As we keep the purity of the density matrix, we require 
\begin_inset Formula 
\[
k_{\mathrm{FGR}}P_{2}\left(P_{2}-P_{1}\right)+\frac{2}{\hbar}H_{12}^{el}\left(P_{2}-P_{1}\right)\text{Im}\rho_{12}+\Gamma\rho_{12}^{*}+\Gamma^{*}\rho_{12}=0
\]

\end_inset


\begin_inset Formula 
\[
k_{\mathrm{FGR}}P_{2}\left(P_{2}-P_{1}\right)-2k_{\mathrm{FGR}}\left[\mathrm{Im}\rho_{12}\right]^{2}\left(P_{2}-P_{1}\right)+\Gamma\rho_{12}^{*}+\rho_{12}\Gamma^{*}=0
\]

\end_inset


\end_layout

