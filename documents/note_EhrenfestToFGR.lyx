\begin_layout Standard
Use 
\begin_inset Formula $\delta^{3}\left(s\right)=\frac{\delta\left(s\right)}{4\pi s^{2}}$
\end_inset

 and carry out 
\begin_inset Formula $\int\mathrm{d}\mathbf{r}^{\prime}\delta^{3}\left(r^{\prime}\right)=1$
\end_inset


\begin_inset Formula 
\begin{equation}
\int\mathrm{d}\mathbf{r}\mathbf{E}_{\omega}\left(\mathbf{r}\right)\cdot\boldsymbol{\xi}\left(\mathbf{r}\right)=\frac{\mu_{01}^{2}{\cal R}_{\omega}k^{2}}{3\pi\epsilon_{0}}\int ds\delta\left(s\right)\frac{e^{iks}}{s}
\end{equation}

\end_inset

where the real part yields (note: 
\begin_inset Formula $\int ds\delta\left(s\right)sf\left(s\right)=0$
\end_inset

)
\begin_inset Formula 
\begin{eqnarray*}
\int ds\delta\left(s\right)\frac{\cos ks}{s} & = & \int ds\delta\left(s\right)g\left(s\right)\\
 & = & \int ds\delta\left(s\right)\left[g\left(s\right)+s\frac{d}{ds}g\left(s\right)\right]\\
 & = & \int ds\delta\left(s\right)\frac{d}{ds}\left(sg\left(s\right)\right)\\
 & = & \int ds\delta\left(s\right)\left(-k\sin ks\right)\\
 & = & 0
\end{eqnarray*}

\end_inset

and the imaginary part is 
\begin_inset Formula 
\[
\int ds\delta\left(s\right)\frac{i\sin ks}{s}=ik\int ds\delta\left(s\right)\frac{\sin ks}{ks}=ik\lim_{s\rightarrow0^{+}}\frac{\sin ks}{ks}=ik
\]

\end_inset

